<% include ../partials/header %>


<div class="row">
            <div class="column padding-reset">
                <div class="ui huge message page grid">
                    <h1 class="ui huge header">Welcome to YelpCamp</h1>
                    <p>View our hand-picked campgrounds from all over the world</p>
                </div>
            </div>
        </div>

<div class="ui grid">
<% campgrounds.forEach(function(campground){ %>
    <div class="four wide column">
        <div class="ui card">  
            <div class="image"><img src = "<%= campground.image %>"></div>
            <div class="header content"><h4><%= campground.name %></h4></div>
            <a class="ui primary button" href="/campgrounds/<%=campground._id%>">More Info</a>
        </div>    
    </div>
<% }); %>
</div>

<% include ../partials/footer %>